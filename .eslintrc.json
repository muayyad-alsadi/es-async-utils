{
    "env": {
        "browser": true,
        "node": true,
        "es2020": true
    },
    "globals": {
        "Generator": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {}
    },
    "plugins": ["promise", "security", "import", "jsdoc"],
    "extends": [
        "eslint:recommended",
        "plugin:jsdoc/recommended",
        "plugin:promise/recommended",
        "plugin:security/recommended",
        "standard",
        "prettier"
    ],
    "rules": {
        "camelcase": ["off"],
        "indent": ["warn", 4],
        "no-unused-vars": ["warn"],
        "no-extra-semi": ["warn"],
        "linebreak-style": ["error", "unix"],
        "quotes": ["warn", "double"],
        "semi": ["error", "always"]
    }
}
